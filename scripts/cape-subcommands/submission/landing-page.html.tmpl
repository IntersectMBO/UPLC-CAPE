        <div class="benchmark-grid">
            {{range .Benchmarks}}
            <div class="benchmark-row">
                <div class="benchmark-name">{{.Name}}</div>
                <div class="benchmark-links">
                    <a href="base/benchmarks/{{.Name}}.html" class="benchmark-link base">
                        ðŸ“Š Base Mode
                        <span class="submission-count">{{.BaseCount}} submissions</span>
                    </a>
                    <a href="open/benchmarks/{{.Name}}.html" class="benchmark-link open">
                        ðŸš€ Open Mode
                        <span class="submission-count">{{.OpenCount}} submissions</span>
                    </a>
                </div>
            </div>
            {{end}}
        </div>
    </div>

    <div class="footer">
        <p>Generated by UPLC-CAPE â€¢ <a href="https://github.com/IntersectMBO/UPLC-CAPE">View on GitHub</a></p>
    </div>
</body>
</html>
